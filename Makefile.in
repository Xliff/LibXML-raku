test : all
	@prove -e"perl6 -I ." -v t

clean :
	@rm -f $(SRC)/xml6_*%O% $(SRC)/dom%O% $(SRC)/domXPath%O% resources/libraries/*%LIB-NAME%

realclean : clean
	@rm -f Makefile doc/*.md doc/*/*.md

doc : README.md doc/Attr.md doc/CDATASection.md doc/Comment.md doc/Document.md doc/DocumentFragment.md\
      doc/Dtd.md doc/Element.md doc/ErrorHandler.md doc/Namespace.md doc/Node.md doc/PI.md doc/RegExp.md

README.md : lib/LibXML.pm6
	(\
	    echo '[![Build Status](https://travis-ci.org/p6-pdf/Font-FreeType-p6.svg?branch=master)](https://travis-ci.org/p6-pdf/Font-FreeType-p6)'; \
            echo '';\
            perl6 -I . --doc=Markdown lib/LibXML.pm6\
        ) > README.md

